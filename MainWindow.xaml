<Window x:Name="Main" x:Class="TD_Loader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TD_Loader"
        mc:Ignorable="d"
        Title="TD Loader" Height="450" Width="800" WindowState="Maximized" WindowStyle="SingleBorderWindow" MinHeight="300" MinWidth="600" Activated="Main_Activated">
    <Window.Resources>
        <FontFamily x:Key="nkfont">/Fonts/#Oetztype</FontFamily>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="5"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBar>
            <Button x:Name="File_Button">File</Button>
            <Button x:Name="View_Button">View</Button>
            <Button x:Name="Help_Button">Help</Button>
        </ToolBar>


        <TabControl TabStripPlacement="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" Background="Black">
            <TabItem Header="     Games     " FontSize="25">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="10"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF323232">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>


                    <Viewbox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="175" MaxHeight="100"  Margin="35,0">
                        <TextBlock x:Name="BTD5_Text" Text="BTD5" Foreground="#FFF0F0F0" FontFamily="{StaticResource nkfont}" FontSize="1"/>
                    </Viewbox>
                    <Image x:Name="BTD5_Image" Grid.Column="1" Grid.Row="3" Source="Resources/btd5_not loaded.png" Margin="10,0" MouseDown="BTD5_Image_MouseDown" HorizontalAlignment="Center"/>

                    <Viewbox Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="175" MaxHeight="100"  Margin="35,0">
                        <TextBlock x:Name="BTDB_Text" Text="BTDB" Foreground="#FFF0F0F0" FontFamily="{StaticResource nkfont}" FontSize="1"/>
                    </Viewbox>
                    <Image x:Name="BTDB_Image" Grid.Column="2" Grid.Row="3" Source="Resources/btdb 2_not loaded.png" Margin="10,0" MouseDown="BTDB_Image_MouseDown" HorizontalAlignment="Center"/>

                    <Viewbox Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="175" MaxHeight="100" Margin="35,0">
                        <TextBlock x:Name="BMC_Text" Text="BMC" Foreground="#FFF0F0F0" FontFamily="{StaticResource nkfont}" FontSize="1" />
                    </Viewbox>
                    <Image x:Name="BMC_Image" Grid.Row="3" Grid.Column="3" Source="Resources/bmc_not loaded.png" Margin="10,0" MouseDown="BMC_Image_MouseDown" HorizontalAlignment="Center"/>
                </Grid>


            </TabItem>
            <TabItem Header="     Mods     " FontSize="25" Padding="5">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="10"/>
                    </LinearGradientBrush>
                </TabItem.Background>




                <Grid Background="#FF414141">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="AddMods_Button" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" MinWidth="200" MinHeight="50" MaxWidth="150" Height="auto" Width="auto" Click="AddMods_Button_Click">Add Mods</Button>
                        <ListBox x:Name="Mods_ListBox" Grid.Row="3" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.OpacityMask>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </ListBox.OpacityMask>
                        <ListBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF555555" Offset="0"/>
                            </LinearGradientBrush>
                        </ListBox.Background>
                    </ListBox>
                </Grid>




            </TabItem>
            <TabItem Header="     Plugins     " FontSize="25" Padding="5">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="10"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF414141"/>
            </TabItem>
            <TabItem Header="     Saves     " FontSize="25" Padding="5" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="10"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF414141"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
